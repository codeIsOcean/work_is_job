# Development Environment Configuration
# Для локальной разработки в PyCharm
# Скопируйте этот файл в .env.dev и заполните реальными значениями

# Bot Configuration
BOT_TOKEN=your_dev_bot_token_here
LOG_CHANNEL_ID=your_dev_log_channel_id_here
ADMIN_IDS=your_admin_id_here

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/bot_dev

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG

# Webhook Configuration (для dev используем polling)
USE_WEBHOOK=false
WEBHOOK_URL=
WEBHOOK_PATH=
WEBHOOK_PORT=8080

# Database Pool Configuration
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=30
RATE_LIMIT_WINDOW=60

# Security
SECRET_KEY=dev_secret_key_change_in_production
ALLOWED_HOSTS=localhost,127.0.0.1

# Monitoring
ENABLE_METRICS=false
METRICS_PORT=9090
