# Test Environment Configuration
# Для тестового окружения (локально в Docker + на сервере)
# Скопируйте этот файл в .env.test и заполните реальными значениями

# Bot Configuration
BOT_TOKEN=your_test_bot_token_here
LOG_CHANNEL_ID=your_test_log_channel_id_here
ADMIN_IDS=your_admin_id_here

# Database Configuration
DATABASE_URL=postgresql://postgres:test_password@postgres_test:5432/bot_test

# Redis Configuration
REDIS_URL=redis://redis_test:6379/0

# Environment
ENVIRONMENT=testing
DEBUG=true
LOG_LEVEL=INFO

# Webhook Configuration
USE_WEBHOOK=true
WEBHOOK_URL=https://your-domain.com/webhook
WEBHOOK_PATH=/webhook
WEBHOOK_PORT=8080

# Database Pool Configuration
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_WINDOW=60

# Security
SECRET_KEY=test_secret_key_change_in_production
ALLOWED_HOSTS=your-domain.com,localhost,127.0.0.1

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# SSL Configuration
SSL_CERT_PATH=/etc/ssl/certs/cert.pem
SSL_KEY_PATH=/etc/ssl/private/key.pem
